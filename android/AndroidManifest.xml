<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inoek.apps.games.ballbounzreloaded" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/batbal"
        android:label="@string/app_name">
        <activity
            android:name="com.inoek.apps.games.ballbounzreloaded.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.inoek.apps.games.ballbounzreloaded.FirstActivity"
            android:label="@string/title_activity_first"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"  >
        </activity>

        <activity
            android:name="com.inoek.apps.games.ballbounzreloaded.InstructionsVideoActivity"
            android:label="@string/title_activity_instructions"
            android:screenOrientation="landscape"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"  >
        </activity>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data android:name="com.google.android.gms.games.APP_ID" android:value="@string/app_id"/>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5637966806573218~8399133922"/>
    </application>

</manifest>
